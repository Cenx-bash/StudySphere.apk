<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Color -->
    <solid android:color="#FAFAFA" /> <!-- Softer light color for a modern look -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" /> <!-- Slightly darker gray for better contrast -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp" /> <!-- Slightly larger for a smoother look -->

    <!-- Padding -->
    <padding
        android:top="10dp"
        android:bottom="10dp"
        android:left="12dp"
        android:right="12dp" />

    <!-- Elevation Effect (Fake Shadow) -->
    <gradient
        android:angle="90"
        android:startColor="#E0E0E0"
        android:endColor="#FFFFFF"
        android:type="linear" />

</shape>
